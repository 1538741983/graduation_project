@model OJ.OJService.ProblemDO
@{
    ViewBag.Title = "题目信息";
}

<div class="col-md-10">
    <h2 class="text-center">@(Model.Title)</h2>
    <div class="text-center">
        <span>时间限制：@(Model.Time_limit)ms</span>
        <span>&nbsp;|&nbsp;</span>
        <span>内存限制：@(Model.Memory_limit) KB</span>

    </div>
    <div class="text-center">
        <span class="text-center">难度：@(Model.Difficulty)</span>
    </div>

    <h4>描述</h4>
    <span>@(new HtmlString(Model.Describe))
    </span>

    <h4>输入</h4>
    <span>@(Model.Input)
    </span>

    <h4>输出</h4>
    <span>@(Model.Output)</span>

    <h4>样例输入</h4>
    <pre>@(Model.Sample_input)</pre>

    <h4>样例输出</h4>
    <pre>@(Model.Sample_output)</pre>

    <h4>提示</h4>
    <pre>@(Model.Hint)</pre>

    <h4>上传者</h4>
    <a>admin</a>

    <form role="form" style="margin-top: 20px" action="@Url.Action("SubmitCode")" method="POST">
        <div class="form-group">
            <select id="language" name="language" class="form-control" style="width: 100px; display: inline-block">
                <option>C</option>
                <option>C++</option>
            </select>
            <button type="submit" class="btn btn-default">提交</button>
        </div>
        <textarea id="code" name="code" class="form-control" rows="8"></textarea>
    </form>
</div>
